{
	"browser": {
		"./lib/node/main.js": "./lib/browser/main.js"
	},
	"description": "NPM module to externalize and localize VSCode extensions",
	"devDependencies": {
		"@types/mocha": "10.0.6",
		"@types/node": "20.11.30",
		"mocha": "10.3.0",
		"rimraf": "5.0.5",
		"typescript": "5.4.2",
		"typescript-esbuild": "0.4.5"
	},
	"files": [
		"lib/common",
		"lib/browser",
		"lib/node",
		"!lib/*/test",
		"!lib/**/*.tsbuildinfo",
		"node.js",
		"node.d.ts",
		"browser.js",
		"browser.d.ts"
	],
	"main": "./lib/node/main.js",
	"name": "vscode-nls",
	"scripts": {
		"clean": "rimraf lib",
		"compile": "tsc -b ./tsconfig.json",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"watch": "tsc -b ./tsconfig.json -w"
	},
	"type": "module",
	"typings": "./lib/common/common.d.ts"
}
